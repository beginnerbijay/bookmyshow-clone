<%- include('../header'); %>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="jumbotron">
					<h1>Book Movie Faster</h1>
				</div>
			</div>
			<div class="col-md-4">
				<img src="<%=movie.img%>">
			</div>
		
		<div id="content" class="col-md-8">
			<h2 style="color: #fff;"><%=movie.name%></h2>
		
				<p>Ratings: <%=movie.ratings%></p>
				<p>Director: <%=movie.director%></p>
				<p>Release: <%=movie.release%></p>
				<h3>Summary: </h3>
				<p><%=movie.summary%></p>
				<%screen.forEach(function(screen){%>
					<a class="btn btn-primary btn-large" href="/book_seat/<%=screen._id%>"><%=screen.screening_start%>:00 Hrs</a>
					<%});%>
		</div>
	</div>
</div>



